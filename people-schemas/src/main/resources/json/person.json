{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "description": "Schema representing a person",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of person."
    },
    "nickname": {
      "type": "string",
      "description": "Preferred or common name"
    }
  },
  "required": ["name"]
}
